#-*-makefile-*-

BASE=../../../../

ifndef ARM_LINUX_CONFIG_FILE
$(error "$${ARM_LINUX_CONFIG_FILE} is not defined. The file generated by 'armcc --arm_linux_configure'")
endif
CCDEP_debug = armcc
CCDEP_release = armcc
CC_debug = armcc
CC_release = armcc
CFLAGS_debug = --cpu=Cortex-A8.no_neon --fpu=VFPv3_D16 -g -O0 --apcs=/interwork -c --c99 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
CFLAGS_release = --cpu=Cortex-A8.no_neon --fpu=VFPv3_D16 -O3 -Otime --apcs=/interwork -c --c99 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
DEFINES_debug = -D_ffix_r=__builtin_lrintf
DEFINES_release = -DNDEBUG=1 -D_ffix_r=__builtin_lrintf
INCLUDES_debug = -I$(BASE).
INCLUDES_release = -I$(BASE).
LDFLAGS_debug = --cpp -L--cpu=Cortex-A8.no_neon -L--fpu=VFPv3_D16 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
LDFLAGS_release = --cpp -L--cpu=Cortex-A8.no_neon -L--fpu=VFPv3_D16 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
LD_debug = armcc
LD_release = armcc

COMMON_FILES = $(BASE)example-1/frontend/main

INPUTS_COMMON_LINK_debug = $(addsuffix .helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_debug.o,$(COMMON_FILES))
INPUTS_COMMON_LINK_release = $(addsuffix .helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_release.o,$(COMMON_FILES))

DEP_PROJ_LINK_debug = $(BASE)example-1/make/libhelloworld/linuxhf_cortex_a8_rvct_cslibc/libhelloworld_debug.a
DEP_PROJ_LINK_release = $(BASE)example-1/make/libhelloworld/linuxhf_cortex_a8_rvct_cslibc/libhelloworld_release.a

default: helloworld_frontend_debug helloworld_frontend_release

helloworld_frontend_debug: $(INPUTS_COMMON_LINK_debug) $(DEP_PROJ_LINK_debug)
	$(LD_debug) $(LDFLAGS_debug) -o $@ $+ 

helloworld_frontend_release: $(INPUTS_COMMON_LINK_release) $(DEP_PROJ_LINK_release)
	$(LD_release) $(LDFLAGS_release) -o $@ $+ 

%.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_debug.o: %.c
	$(CCDEP_debug) --cpu=Cortex-A8.no_neon --mm $(DEFINES_debug) $(INCLUDES_debug) -o $@ > $*.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_debug.d $<
	$(CC_debug) $(CFLAGS_debug) $(DEFINES_debug) $(INCLUDES_debug) -o $@ $<

%.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_release.o: %.c
	$(CCDEP_release) --cpu=Cortex-A8.no_neon --mm $(DEFINES_release) $(INCLUDES_release) -o $@ > $*.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_release.d $<
	$(CC_release) $(CFLAGS_release) $(DEFINES_release) $(INCLUDES_release) -o $@ $<

CLEAN_COMMON_COMPILE_debug = $(addsuffix .helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_debug.d,$(COMMON_FILES))
CLEAN_COMMON_COMPILE_release = $(addsuffix .helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_release.d,$(COMMON_FILES))

cleandeps:
	$(RM) $(CLEAN_COMMON_COMPILE_debug)
	$(RM) $(CLEAN_COMMON_COMPILE_release)

clean: cleanself
	$(MAKE) -C $(BASE)example-1/make/libhelloworld/linuxhf_cortex_a8_rvct_cslibc cleanself

cleanself:
	$(RM) $(CLEAN_COMMON_COMPILE_debug)
	$(RM) $(CLEAN_COMMON_COMPILE_release)
	$(RM) $(INPUTS_COMMON_LINK_debug)
	$(RM) $(INPUTS_COMMON_LINK_release)
	$(RM) helloworld_frontend_debug
	$(RM) helloworld_frontend_release

.PHONY: default FORCE clean cleandeps cleanself help

FORCE:

help:
	@echo "This makefile has the following targets:"
	@echo " helloworld_frontend_debug"
	@echo " helloworld_frontend_release"
	@echo " default"
	@echo " clean"
	@echo " cleandeps"
	@echo " help"

include $(wildcard $(BASE)example-1/frontend/main.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_debug.d)
include $(wildcard $(BASE)example-1/frontend/main.helloworld_frontend_linuxhf_cortex_a8_rvct_cslibc_release.d)

%.a: FORCE
	$(MAKE) -C $(@D) $(@F)


