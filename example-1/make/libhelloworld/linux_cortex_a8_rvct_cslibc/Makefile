#-*-makefile-*-

BASE=../../../../

ifndef ARM_LINUX_CONFIG_FILE
$(error "$${ARM_LINUX_CONFIG_FILE} is not defined. The file generated by 'armcc --arm_linux_configure'")
endif
ARFLAGS_debug = -rc
ARFLAGS_release = -rc
AR_debug = armar
AR_release = armar
CCDEP_debug = armcc
CCDEP_release = armcc
CC_debug = armcc
CC_release = armcc
CFLAGS_debug = --cpu=Cortex-A8.no_neon --fpu=SoftVFP+VFPv3_D16 -g -O0 --apcs=/interwork -c --c99 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
CFLAGS_release = --cpu=Cortex-A8.no_neon --fpu=SoftVFP+VFPv3_D16 -O3 -Otime --apcs=/interwork -c --c99 --arm_linux_paths --arm_linux_config_file=$(ARM_LINUX_CONFIG_FILE)
DEFINES_debug = -D_ffix_r=__builtin_lrintf
DEFINES_release = -DNDEBUG=1 -D_ffix_r=__builtin_lrintf
INCLUDES_debug = -I$(BASE)example-1/include
INCLUDES_release = -I$(BASE)example-1/include

COMMON_FILES = $(BASE)example-1/src/helloworld

INPUTS_COMMON_ARCHIVE_debug = $(addsuffix .libhelloworld_linux_cortex_a8_rvct_cslibc_debug.o,$(COMMON_FILES))
INPUTS_COMMON_ARCHIVE_release = $(addsuffix .libhelloworld_linux_cortex_a8_rvct_cslibc_release.o,$(COMMON_FILES))


default: libhelloworld_debug.a libhelloworld_release.a

libhelloworld_debug.a: $(INPUTS_COMMON_ARCHIVE_debug)
	$(AR_debug) $(ARFLAGS_debug)   $@ $^

libhelloworld_release.a: $(INPUTS_COMMON_ARCHIVE_release)
	$(AR_release) $(ARFLAGS_release)   $@ $^

%.libhelloworld_linux_cortex_a8_rvct_cslibc_debug.o: %.c
	$(CCDEP_debug) --cpu=Cortex-A8.no_neon --mm $(DEFINES_debug) $(INCLUDES_debug) -o $@ > $*.libhelloworld_linux_cortex_a8_rvct_cslibc_debug.d $<
	$(CC_debug) $(CFLAGS_debug) $(DEFINES_debug) $(INCLUDES_debug) -o $@ $<

%.libhelloworld_linux_cortex_a8_rvct_cslibc_release.o: %.c
	$(CCDEP_release) --cpu=Cortex-A8.no_neon --mm $(DEFINES_release) $(INCLUDES_release) -o $@ > $*.libhelloworld_linux_cortex_a8_rvct_cslibc_release.d $<
	$(CC_release) $(CFLAGS_release) $(DEFINES_release) $(INCLUDES_release) -o $@ $<

CLEAN_COMMON_COMPILE_debug = $(addsuffix .libhelloworld_linux_cortex_a8_rvct_cslibc_debug.d,$(COMMON_FILES))
CLEAN_COMMON_COMPILE_release = $(addsuffix .libhelloworld_linux_cortex_a8_rvct_cslibc_release.d,$(COMMON_FILES))

cleandeps:
	$(RM) $(CLEAN_COMMON_COMPILE_debug)
	$(RM) $(CLEAN_COMMON_COMPILE_release)

clean: cleanself

cleanself:
	$(RM) $(CLEAN_COMMON_COMPILE_debug)
	$(RM) $(CLEAN_COMMON_COMPILE_release)
	$(RM) $(INPUTS_COMMON_ARCHIVE_debug)
	$(RM) $(INPUTS_COMMON_ARCHIVE_release)
	$(RM) libhelloworld_debug.a
	$(RM) libhelloworld_release.a

.PHONY: default FORCE clean cleandeps cleanself help

FORCE:

help:
	@echo "This makefile has the following targets:"
	@echo " libhelloworld_debug.a"
	@echo " libhelloworld_release.a"
	@echo " default"
	@echo " clean"
	@echo " cleandeps"
	@echo " help"

include $(wildcard $(BASE)example-1/src/helloworld.libhelloworld_linux_cortex_a8_rvct_cslibc_debug.d)
include $(wildcard $(BASE)example-1/src/helloworld.libhelloworld_linux_cortex_a8_rvct_cslibc_release.d)


